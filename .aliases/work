# Codeception
alias cpt="../vendor/bin/codecept build"
alias crun="../vendor/bin/codecept run -vvv"
alias ccov="../vendor/bin/codecept run -vvv --coverage --coverage-html && sleep 3 && ocov"
alias ocov="open -a 'Google Chrome' codeception/_output/coverage/index.html"

# ngrok
ngr () {
	local port;
	if [[ $1 == mpe ]]; then
		port=":32776"
	elif [[ $1 == fre ]]; then
		port=":32772"
	fi
	[[ ! -z $port ]] && ngrok http $(dip)$port || echo "missing key [ mpe/fre ]"
}

